<div class="col-md-4 movie">
  <img src="{{Poster}}" alt="{{Title}}"/>
  <marquee class="movieTitle">{{Title}}</marquee>

  <button type="button" class="btn btn-success saveButton" data-imdbid="{{imdbID}}">Add to Watchlist</button>

  <button type="button" class="btn btn-danger removeButton">Remove</button> <br>

  <div id="scroller">
    <div id="section1{{imdbID}}" class="section1">
      <p>Starring:</p>
      <p>{{Actors}}</p>
    </div>

    <div id="section2{{imdbID}}" class="section2">
      <p>Released:</p>
      <p>{{Released}}</p>
    </div>
  </div>

</div>
